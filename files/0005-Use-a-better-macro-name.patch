From 0dac6503c0f0f7f98524274a0f0f219e7d2dd4f7 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Mon, 21 Nov 2016 22:08:24 +0000
Subject: [PATCH 5/5] Use a better macro name

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 ypkg2/rc.yml     | 4 ++--
 ypkg2/scripts.py | 2 +-
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/ypkg2/rc.yml b/ypkg2/rc.yml
index a40c5b3..2dff248 100644
--- a/ypkg2/rc.yml
+++ b/ypkg2/rc.yml
@@ -89,9 +89,9 @@ actions:
     - waf_configure: |
         ./waf configure --prefix=%PREFIX%
     - waf_build: |
-        ./waf build --jobs="%YPKG_NJOBS%"
+        ./waf build --jobs="%YJOBS%"
     - waf_install: |
-        ./waf install --jobs="%YPKG_NJOBS%" --destdir="%installroot%"
+        ./waf install --jobs="%YJOBS%" --destdir="%installroot%"
 defines:
     - CONFOPTS: |
         --prefix=%PREFIX% --build=%HOST% --libdir=%libdir% --mandir=/usr/share/man \
diff --git a/ypkg2/scripts.py b/ypkg2/scripts.py
index 638ccdd..450ed5b 100644
--- a/ypkg2/scripts.py
+++ b/ypkg2/scripts.py
@@ -123,7 +123,7 @@ class ScriptGenerator:
         self.define_macro("installroot", self.context.get_install_dir())
         self.define_macro("workdir", self.work_dir)
         self.define_macro("JOBS", "-j{}".format(self.context.build.jobcount))
-        self.define_macro("YPKG_NJOBS", "{}".format(self.context.build.jobcount))
+        self.define_macro("YJOBS", "{}".format(self.context.build.jobcount))
 
         # Consider moving this somewhere else
         self.define_macro("CFLAGS", " ".join(self.context.build.cflags))
