---
 ypkg2/rc.yml | 6 ++++++
 1 file changed, 6 insertions(+)

diff --git a/ypkg2/rc.yml b/ypkg2/rc.yml
index 5101133..a40c5b3 100644
--- a/ypkg2/rc.yml
+++ b/ypkg2/rc.yml
@@ -86,6 +86,12 @@ actions:
         python3 setup.py build
     - python3_install: |
         python3 setup.py install --root="%installroot%"
+    - waf_configure: |
+        ./waf configure --prefix=%PREFIX%
+    - waf_build: |
+        ./waf build --jobs="%YPKG_NJOBS%"
+    - waf_install: |
+        ./waf install --jobs="%YPKG_NJOBS%" --destdir="%installroot%"
 defines:
     - CONFOPTS: |
         --prefix=%PREFIX% --build=%HOST% --libdir=%libdir% --mandir=/usr/share/man \
