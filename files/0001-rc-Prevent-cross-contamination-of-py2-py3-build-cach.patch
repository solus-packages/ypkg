From e9cf88d771eda443e055aaca79ae8002d60ed2be Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Sun, 28 May 2017 00:58:35 +0100
Subject: [PATCH 1/7] rc: Prevent cross-contamination of py2 + py3 build caches

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 ypkg2/rc.yml | 8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

diff --git a/ypkg2/rc.yml b/ypkg2/rc.yml
index f6e1ba0..ee90a10 100644
--- a/ypkg2/rc.yml
+++ b/ypkg2/rc.yml
@@ -100,13 +100,13 @@ actions:
         }
         perl_install
     - python_setup: |
-        python2.7 setup.py build
+        python2.7 setup.py build -b __py2_build
     - python_install: |
-        python2.7 setup.py install --root="%installroot%"
+        python2.7 setup.py build -b __py2_build install --root="%installroot%"
     - python3_setup: |
-        python3 setup.py build
+        python3 setup.py build -b __py3_build
     - python3_install: |
-        python3 setup.py install --root="%installroot%"
+        python3 setup.py build -b __py3_build install --root="%installroot%"
     - waf_configure: |
         ./waf configure --prefix=%PREFIX%
     - waf_build: |
